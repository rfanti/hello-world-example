<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.sourceforge.io/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">

        <!-- Verifica que as classes e métodos têm Javadoc -->
        <module name="JavadocType"/>
        <module name="JavadocMethod"/>
        <module name="JavadocVariable"/>

        <!-- Verifica a convenção de nomenclatura -->
        <module name="RegexpChecker">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
            <module name="ClassName"/>
            <module name="MethodName"/>
            <module name="VariableName"/>
        </module>

        <!-- Verifica a formatação do código -->
        <module name="WhitespaceAround"/>
        <module name="FileTabCharacter"/>
        <module name="TrailingWhitespace"/>
        
        <!-- Verifica a ordem dos modificadores -->
        <module name="ModifierOrder"/>

        <!-- Verifica que não há campos ocultos -->
        <module name="HiddenField"/>

        <!-- Verifica que não há classes vazias -->
        <module name="EmptyClass"/>
        
        <!-- Verifica que os métodos não são muito longos -->
        <module name="MethodLength">
            <property name="max" value="50"/>
        </module>

        <!-- Verifica a complexidade ciclomática -->
        <module name="CyclomaticComplexity">
            <property name="max" value="10"/>
        </module>

    </module>
</module>

